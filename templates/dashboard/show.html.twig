{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<style>
    /* Set the dark background for the body */
    body {
        background-color: #e1dbc9    ; /* Almost black background */
        color: #f5f5f5; /* Light color for text */
    }

    /* Set the card style with yellow background */
    .card {
        background-color: #ffcc00 ; /* Muted yellow background */
        color: #000; /* Dark color for text */
    }
/* Additional styling for text inside the card */
.card h1, .card h2 {
    color: #000; /* Dark color for text */
    white-space: nowrap; /* Prevents wrapping */
    overflow: hidden; /* Hides overflow text */
    text-overflow: ellipsis; /* Adds ellipsis (...) for overflow text */
    font-size: calc(1rem + 1vw); /* Adjusts font size based on viewport */
}

/* Ensure that the card can fit content properly */
.card {
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%; /* Make sure cards take full height available */
}

    .card-title {
         color: #000; /* Yellow text color */
        padding: 5px;
        margin:auto;
      
        
        border-radius: 5px;
        
    }

    /* Additional styling for text inside the card */
    .card h2, .card h3 {
        color: #000; /* Dark color for text */
    }
    /* Adjustments for smaller breakpoints */
/* General styles for all cards */
.card h1, .card h2, .card h3 {
    color: #000; /* Dark color for text */
    white-space: nowrap; /* Prevents wrapping */
    overflow: hidden; /* Hides overflow text */
    text-overflow: ellipsis; /* Adds ellipsis (...) for overflow text */
}

/* Adjustments for various breakpoints */
@media (min-width: 576px) and (max-width: 767px) {
    .card-title {
        font-size: 1.5rem; /* Slightly larger font size */
        padding: 4px; /* Moderate padding */
    }
    .card h1 {
        font-size: 1.2rem; /* Slightly larger font size for h1 */
    }
    .card h2 {
        font-size: 1rem; /* Slightly larger font size for h2 */
    }
    .card h3 {
        font-size: 0.9rem; /* Slightly larger font size for h3 */
    }
}

@media (min-width: 768px) and (max-width: 991px) {
    .card-title {
        font-size: 1.7rem; /* Larger font size */
        padding: 6px; /* Increased padding */
    }
    .card h1 {
        font-size: 1.4rem; /* Larger font size for h1 */
    }
    .card h2 {
        font-size: 1.2rem; /* Larger font size for h2 */
    }
    .card h3 {
        font-size: 1rem; /* Larger font size for h3 */
    }
}

@media (min-width: 992px) and (max-width: 1199px) {
    .card-title {
        font-size: 1.9rem; /* Larger font size */
        padding: 8px; /* Increased padding */
    }
    .card h1 {
        font-size: 1.6rem; /* Larger font size for h1 */
    }
    .card h2 {
        font-size: 1.4rem; /* Larger font size for h2 */
    }
    .card h3 {
        font-size: 1.2rem; /* Larger font size for h3 */
    }
}

/* Large devices (desktops) */
@media (min-width: 1200px) {
    .card-title {
        font-size: 2.2rem; /* Even larger font size */
        padding: 10px; /* Further increased padding */
    }
    .card h1 {
        font-size: 1.8rem; /* Larger font size for h1 */
    }
    .card h2 {
        font-size: 1.6rem; /* Larger font size for h2 */
    }
    .card h3 {
        font-size: 1.4rem; /* Larger font size for h3 */
    }
   


}
/* Appliquer ces styles à ton CSS global */

html, body {
    height: 100%;
    margin: 0;
    padding: 0;
}

body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

/* Conteneur principal */
.container {
    flex: 1;
    display: flex;
    flex-direction: column;
}

/* Footer */
footer {
    background-color: #000; /* Couleur noire pour le footer */
    color: #f5f0dd; /* Couleur claire pour le texte du footer */
    padding: 20px;
    text-align: center;
    margin-top: auto; /* Pousse le footer vers le bas */
}

/* Adjust margin-top for desktop screens */
@media (min-width: 1200px) {
    .row {
        margin-top: 2.5rem; /* Increase the margin-top to three times the original */
    }
    #ee {
        margin-bottom: 2rem;
    }
}
@media (min-width: 728px) {
    .row {
        margin-top: 2.5rem; /* Increase the margin-top to three times the original */
    }
    #ee {
        margin-bottom: 2rem;
    }
}


</style>

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Première ligne de cartes -->
        <div class="col-12 col-md-6 mb-4">
            <div class="card p-3 h-100 text-center">
                <h1 class="card-title">LFB</h1>
                {% if latestWeekLFB is not null %}
                    <h2>{{ totalPointsLFB | default(0) }} PTS SEMAINE {{ latestWeekLFB.id }}</h2>
                    <h2>RANKING SEMAINE {{ latestWeekLFB.id }}: {{ rankLFB | default(0) }}e / {{ totalUsersLFB | default(0) }}</h2>
                {% else %}
                    <h2>0 PTS SEMAINE 1</h2>
                    <h2>RANKING SEMAINE 1: 0e / 0</h2>
                {% endif %}
            </div>
        </div>
        <div class="col-12 col-md-6 mb-4">
            <div class="card p-3 h-100 text-center">
                <h1 class="card-title">LF2</h1>
                {% if latestWeekLF2 is not null %}
                    <h2>{{ totalPointsLF2 | default(0) }} PTS SEMAINE {{ (latestWeekLF2.id - 22) }}</h2>
                    <h2>RANKING SEMAINE {{ (latestWeekLF2.id - 22) }}: {{ rankLF2 | default(0) }}e / {{ totalUsersLF2 | default(0) }}</h2>
                {% else %}
                    <h2>0 PTS SEMAINE 1</h2>
                    <h2>RANKING SEMAINE 1: 0e / 0</h2>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Deuxième ligne de cartes -->
        <div class="col-12 col-md-6 mb-4">
            <div class="card p-3 h-100 text-center">
                <h1 class="card-title">LFB</h1>
                <h2>{{ app.user.getPtlLfb | default(0) }} PTS SAISON</h2>
                <h3>{{ rankLFB | default(0) }}e / {{ totalUsersLFB | default(0) }}</h3>
            </div>
        </div>
        <div class="col-12 col-md-6 mb-4">
            <div class="card p-3 h-100 text-center">
                <h1 class="card-title">LF2</h1>
                <h2>{{ app.user.getPtLf2 | default(0) }} PTS SAISON</h2>
                <h3>{{ rankLF2 | default(0) }}e / {{ totalUsersLF2 | default(0) }}</h3>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Troisième ligne de cartes (deck) -->
        <div class="col-12" id="ee">
            <div class="card p-3 h-100 text-center">
                <h1 class="card-title">5 MAJEUR</h1>
                <h2>LFB</h2>
                <h2>LF2</h2>
            </div>
        </div>
    </div>
</div>
{% endblock %}
