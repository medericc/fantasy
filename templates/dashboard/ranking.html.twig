{% extends 'base.html.twig' %}

{% block title %}Classement - {% if league == 'lfb' %}LFB{% else %}LF2{% endif %}{% endblock %}

{% block body %}
    <div class="container-fluid my-4">
        <h1 class="text-center mb-4">Classement - {% if league == 'lfb' %}LFB{% else %}POULE B{% endif %}</h1>

        <div class="table-responsive"> <!-- Ajout de table-responsive pour mobile-first -->
            <table class="table table-striped table-bordered"> <!-- Utilisation des classes Bootstrap -->
                <thead class="thead-dark"> <!-- Classe Bootstrap pour un en-tête sombre -->
                    <tr>
                        <th scope="col">Rang</th>
                        <th scope="col">Pseudo</th>
                        <th scope="col">Points</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Afficher l'utilisateur connecté en premier -->
                    <tr class="table-primary"> <!-- Classe Bootstrap pour une ligne surlignée -->
                        <td>{{ userRank }}</td>
                        <td>{{ currentUser.pseudo }}</td>
                        <td>
                            {% if league == 'lfb' %}
                                {{ currentUser.ptlLfb }}
                            {% else %}
                                {{ currentUser.ptLf2 }}
                            {% endif %}
                        </td>
                    </tr>

                    <!-- Afficher le reste du classement en sautant la position de l'utilisateur connecté -->
                    {% for user in users %}
                        {% if loop.index != userRank %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ user.pseudo }}</td>
                                <td>
                                    {% if league == 'lfb' %}
                                        {{ user.ptlLfb }}
                                    {% else %}
                                        {{ user.ptLf2 }}
                                    {% endif %}
                                </td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
